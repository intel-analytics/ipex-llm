<?xml version="1.0" encoding="UTF-8"?>
<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>
  <id>dist</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>/bin</outputDirectory>
      <directory>${project.build.directory}/../../../scripts</directory>
      <includes>
          <include>classes.lst</include>
          <include>img_class.lst</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/lib</outputDirectory>
      <directory>${project.build.directory}/../../../spark/dl/target</directory>
      <includes>
          <include>bigdl-*-jar-with-dependencies.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/lib</outputDirectory>
      <directory>${project.build.directory}</directory>
      <includes>
          <include>*-python-api.zip</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/conf</outputDirectory>
      <directory>${project.build.directory}/../../../spark/dl/src/main/resources</directory>
      <includes>
          <include>spark-bigdl.conf</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
