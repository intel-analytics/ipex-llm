apiVersion: apps/v1
kind: Deployment
metadata:
  name: flink-taskmanager
spec:
  replicas: 1
  selector:
    matchLabels:
      app: bigdl-ppml-trusted-realtime-ml-occlum
      component: taskmanager
  template:
    metadata:
      labels:
        app: bigdl-ppml-trusted-realtime-ml-occlum
        component: taskmanager
    spec:
      tolerations:
      - key: sgx.intel.com/epc
        operator: Exists
        effect: NoSchedule
      containers:
      - name: taskmanager
        image: {{ .Values.image }}
        command: ["/bin/bash","-c"]
        args:
              - export FLINK_TASK_MANAGER_IP=$(hostname -I);
                cd /opt;
                bash init-occlum-taskmanager.sh;
                bash start-flink-taskmanager.sh | tee ./taskmanager.log;
                tail -f /dev/null
#        args: ["export FLINK_JOB_MANAGER_IP=flink-jobmanager; tail -f /dev/null"]
        env:
          - name: CORE_NUM
            value: "16"
          - name: SGX_MEM_SIZE
            value: "32G"
          - name: FLINK_JOB_MANAGER_IP
            valueFrom:
              configMapKeyRef:
                name: flink-config
                key: flink.jobmanager.ip
          - name: TASKMANAGER_MEMORY_MANAGED_SIZE
            valueFrom:
              configMapKeyRef:
                name: flink-config
                key: taskmanager.memory.managed.size
          - name: TASKMANAGER_MEMORY_TASK_HEAP_SIZE
            valueFrom:
              configMapKeyRef:
                name: flink-config
                key: taskmanager.memory.task.heap.size
          - name: XMX_SIZE
            valueFrom:
              configMapKeyRef:
                name: flink-config
                key: xmx.size
          - name: FLINK_TASK_MANAGER_RPC_PORT
            valueFrom:
              configMapKeyRef:
                name: flink-config
                key: taskmanager.rpc.port
          - name: SGX_MODE
            valueFrom:
              configMapKeyRef:
                name: flink-config
                key: sgx.mode
        ports:
        - containerPort: 6125
          name: rpc
#        resources:
#          requests:
#            cpu: 10
#            memory: 128G
#            sgx.intel.com/epc: 133258905600
#          limits:
#            cpu: 12
#            memory: 128G
#            sgx.intel.com/epc: 133258905600
#        livenessProbe:
#          tcpSocket:
#            port: 6122
#          initialDelaySeconds: 30
#          periodSeconds: 60
        securityContext:
          privileged: true
        volumeMounts:
        - name: enclave-keys
          mountPath: /occlum/Pal/src/host/Linux-SGX/signer/enclave-key.pem
        - name: java-secure-keys
          mountPath: /opt/keys
        - name: java-secure-password
          mountPath: /opt/password
        - name: device-plugin
          mountPath: /var/lib/kubelet/device-plugins
        - name: aesm-socket
          mountPath: /var/run/aesmd/aesm.socket
      volumes:
      - name: enclave-keys
        hostPath:
          path:  {{ .Values.enclaveKeysPath }}
      - name: java-secure-keys
        secret:
          secretName: ssl-keys
      - name: java-secure-password
        secret:
          secretName: ssl-password
      - name: device-plugin
        hostPath:
          path: /var/lib/kubelet/device-plugins
      - name: aesm-socket
        hostPath:
          path: /var/run/aesmd/aesm.socket
