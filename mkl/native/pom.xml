<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>mkl</artifactId>
        <groupId>com.intel.webscaleml</groupId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.intel.webscaleml.mkl</groupId>
    <artifactId>libjmkl</artifactId>
    <packaging>${packaging.type}</packaging>

    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <packaging.type>jar</packaging.type>
            </properties>
        </profile>
        <profile>
            <id>mkl</id>
            <properties>
                <packaging.type>so</packaging.type>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-compiler-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>native-maven-plugin</artifactId>
                        <version>1.0-alpha-8</version>
                        <extensions>true</extensions>
                        <configuration>
                            <compilerProvider>generic-classic</compilerProvider>
                            <compilerExecutable>icc</compilerExecutable>
                            <linkerExecutable>icc</linkerExecutable>
                            <sources>
                                <source>
                                    <directory>${basedir}/src/main/c/jni</directory>
                                    <fileNames>
                                        <fileName>mkl.c</fileName>
                                    </fileNames>
                                </source>
                            </sources>
                            <compilerStartOptions>
                                <compilerStartOption>-I ${JAVA_HOME}/include/</compilerStartOption>
                                <compilerStartOption>-I ${JAVA_HOME}/include/linux/</compilerStartOption>
                            </compilerStartOptions>
                            <compilerEndOptions>
                                <compilerEndOption>-lpthread</compilerEndOption>
                                <compilerEndOption>-lm</compilerEndOption>
                                <compilerEndOption>-shared</compilerEndOption>
                                <compilerEndOption>-liomp5</compilerEndOption>
                                <compilerEndOption>-lc</compilerEndOption>
                                <compilerEndOption>-fPIC</compilerEndOption>
                                <compilerEndOption>-fopenmp</compilerEndOption>
                                <compilerEndOption>-Wall</compilerEndOption>
                                <compilerEndOption>-std=c99</compilerEndOption>
                            </compilerEndOptions>
                            <linkerStartOptions>
                                <linkerStartOption>-I ${JAVA_HOME}/include/</linkerStartOption>
                                <linkerStartOption>-I ${JAVA_HOME}/include/linux/</linkerStartOption>
                            </linkerStartOptions>
                            <linkerMiddleOptions>
                                <linkerMiddleOption>-lpthread</linkerMiddleOption>
                                <linkerMiddleOption>-lm</linkerMiddleOption>
                                <linkerMiddleOption>-lrt</linkerMiddleOption>
                            </linkerMiddleOptions>
                            <linkerEndOptions>
                                <linkerEndOption>-shared</linkerEndOption>
                                <linkerEndOption>-lc</linkerEndOption>
                                <linkerEndOption>-fPIC</linkerEndOption>
                                <linkerEndOption>-Wall</linkerEndOption>
                                <linkerEndOption>-liomp5</linkerEndOption>
                            </linkerEndOptions>
                            <linkerFinalName>libjmkl</linkerFinalName>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
